<Window x:Class="Axiom_Launcher.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Create Project" Height="156" Width="394"
        Style="{DynamicResource CustomWindowStyle}">

    <Grid>

        <TextBox Name="ProjectNameTextBox" Text="Project Name" Margin="40,29,40,0" VerticalAlignment="Top" />
        <TextBox Name="ProjectDirectoryTextBox" Text="Path" Margin="40,0,40,0" VerticalAlignment="Center" />

        <CheckBox Name="IncludeAssetsCheckbox" IsChecked="True" Content="Include Default Assets" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,10,10,10"/>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" >

            <Button Content="Find..." VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Height="27" Width="60" Click="FindClick"></Button>
            <Button Content="Create" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Height="27" Width="60" Click="CreateClick"></Button>

        </StackPanel>

    </Grid>

</Window>
